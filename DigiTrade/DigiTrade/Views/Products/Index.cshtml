                @Html.DisplayNameFor(model => model.RAM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ROM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryCam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FrontCam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Battery)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tax)
            </td>
